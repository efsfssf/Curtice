<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CurticeWinUI.Styles">

    <Style x:Key="ContactInfoButtonTemplate" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <!-- Здесь опишите структуру вашей кнопки -->
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <!--Profile Photo-->
                            <ColumnDefinition Width="Auto"/>
                            <!--Name & Online Status-->
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <PersonPicture Width="40" Height="40" ProfilePicture="{Binding ContactPhoto, FallbackValue='https://learn.microsoft.com/windows/uwp/contacts-and-calendar/images/shoulder-tap-static-payload.png', UpdateSourceTrigger=PropertyChanged}" />

                        <Grid
                            Grid.Column="1">
                            <!--<Grid.RowDefinitions>
                                
                                <RowDefinition/>
                            </Grid.RowDefinitions>-->

                            <TextBlock>
                                <!--name-->
                                <Run Text="{Binding ContactName, FallbackValue='Евгений Гений', UpdateSourceTrigger=PropertyChanged}"
                                FontSize="15"/>
                                
                                <LineBreak/>
                                 <!--online status-->
                                <Run Text="{Binding LastSeen, FallbackValue='Только что', UpdateSourceTrigger=PropertyChanged}"
                                FontSize="15"/>
                            </TextBlock>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

