<Page x:ConnectionId='1'
    x:Class="CurticeWinUI.Views.MessagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:viewmodels="using:CurticeWinUI.ViewModels"
    xmlns:models="using:CurticeWinUI.Models"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!--Column Chat Contact List-->
            <ColumnDefinition/>
            <!--Conversation Area-->
            <ColumnDefinition Width="*"/>
            <!--Profile Info-->
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" MinWidth="406">
            <Grid.RowDefinitions>
                <!--Searchbox-->
                <RowDefinition Height="Auto"/>

                <!--Chats List-->
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Панель с поиском и доп кнопкой создания беседы-->

            <!--BorderBrush="White" BorderThickness="1"-->
            <Grid
                Grid.Row="0"
                Margin="6"
                >
                <Grid.ColumnDefinitions>
                    <!--Search-->
                    <ColumnDefinition Width="*"/>
                    <!--More Options Button-->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" Padding="12,0" VerticalAlignment="Stretch" PlaceholderText="Search" MinWidth="200"/>
                <DropDownButton Grid.Column="1" Content="Создать" Margin="10,0,0,0">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Создать чат"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </Grid>

            <Grid
                Grid.Row="1"
                >
                <ListView x:ConnectionId='2' Grid.Column="0"                                          
                                                                                 
                                                            >
                    <ListView.ItemTemplate>
                        <DataTemplate                           >
                            <Grid x:ConnectionId='4'>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <PersonPicture x:ConnectionId='5'                                  Grid.RowSpan="2" Width ="32" Height="32" Margin="6" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock x:ConnectionId='6' Grid.Column="1"
                                                       
                                              
                                   Style="{ThemeResource BaseTextBlockStyle}"
                                   Margin="12,6,0,0"/>
                                <TextBlock x:ConnectionId='7' Grid.Column="2"
                                   Grid.ColumnSpan="2"
                                                                  
                                              
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Margin="12,6,0,0"
                                   HorizontalAlignment="Right"/>
                                <TextBlock x:ConnectionId='8' Grid.Column="1"
                                   Grid.Row="1"
                                                              
                                              
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Margin="12,0,0,6"/>
                                <InfoBadge x:Name="infoBadge1" Value="5" Opacity="1" Grid.Column ="3" Grid.Row ="1"  HorizontalAlignment="Right" Margin="0,0,0,6"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ContextFlyout>
                        <MenuFlyout x:ConnectionId='10' x:Name="allContactsMenuFlyout">
                            <MenuFlyoutItem Text="Share">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE72D;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:ConnectionId='11' x:Uid="CopyChatID"                                                                                                                             Icon="Copy"/>


                            <MenuFlyoutItem Text="Очистить историю сообщений" Icon="Delete"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Закрепить"/>
                            <MenuFlyoutItem Text="Архивировать"/>
                        </MenuFlyout>
                    </ListView.ContextFlyout>
                </ListView>
            </Grid>
        </Grid>


    </Grid>
</Page>

