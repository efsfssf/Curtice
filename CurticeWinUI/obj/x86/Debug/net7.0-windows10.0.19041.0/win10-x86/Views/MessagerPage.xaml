<Page x:ConnectionId='1'
    x:Class="CurticeWinUI.Views.MessagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:viewmodels="using:CurticeWinUI.ViewModels"
    xmlns:models="using:CurticeWinUI.Models">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Список диалогов слева -->
        <ListView x:ConnectionId='2' Grid.Column="0"                                          
                                                                       >
            <ListView.ItemTemplate>
                <DataTemplate                           >
                    <Grid x:ConnectionId='8'>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image x:ConnectionId='9'                          Width="50" Height="50"/>
                        <TextBlock x:ConnectionId='10' Grid.Column="1"
                                                
                                       
                            Style="{ThemeResource BaseTextBlockStyle}"
                            Margin="12,6,0,0"/>
                        <TextBlock x:ConnectionId='11'  Grid.Column="1"
                            Grid.Row="1"
                                                       
                                       
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Margin="12,0,0,6"/> 
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <!-- Переписка справа -->
        <StackPanel Grid.Row="1">
            <TextBlock x:ConnectionId='3'                                                                                                  />
            <ListView x:ConnectionId='4'                                                        >
                <!-- Здесь вы можете настроить DataTemplate для элементов списка сообщений -->
            </ListView>
            <!-- Поле ввода и кнопка отправки -->
            <StackPanel Orientation="Horizontal">
                <Button x:ConnectionId='5' Content="Прикрепить"                                            />
                <RichEditBox PlaceholderText="Введите сообщение" Width="200" Height="Auto" Margin="8" />
                <Button x:ConnectionId='6' Content="Отправить"                                          />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

